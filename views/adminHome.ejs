</head>
<body>
    
    <!-- Header -->
        <header id="header">
            <nav>
                <div class="container">
                    <div class="text-center">
                        <a href="" class="nav-brand text-dark">User Management System</a>
                    </div>
                </div>
            </nav>
        </header>
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                </a>
            </div>
        

            <!-- form handling -->
            <div >
                <label for="name" class="text-light">Search Here</label>
            <input type="text" name="name" placeholder="Search by name" id="name-search"  style="width: 30%;
            padding: .6em 1em;
            margin: .5em 0;
            border: 1px solid var(--border);
            font-family: 'Barlow', sans-serif;
            font-size: 1em;
            border-radius: .2em;">
            <i class="fa fa-search" aria-hidden="true"></i>
        </div>
           
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender</th>
                            <th>Pass</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                   
                </table>
            </form>
            <div class="log-div" style=" display:flex; justify-content: end;">
                <form action="/ad-logout" method="post"><button class="logout-btn">Logout</button></form>
            </div>
        </div>
        <%- include('include/_footer') %>
    </main>
  
